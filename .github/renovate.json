{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "jenkins": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["apps/.*/jenkins.*/release/.*-plugins\\.yaml$$"],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*: (?<currentValue>.*)\\s",
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*: .*/download/(?<currentValue>[^/]+)/[^/]+\\.\\w+\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}maven{{/if}}"
    },
    {
      "customType": "regex",
      "fileMatch": ["apps/.*\\.yaml$$"],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)(?: versioning=(?<versioning>\\S+))?[\\s\\S]*?(?:tag|version|appVersion): (?<currentValue>\\S+)(?:\\s|$)",
        "(?:tag|version|appVersion): (?<currentValue>\\S+)[\\s\\S]*?datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)(?: versioning=(?<versioning>\\S+))?"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}docker{{/if}}"
    }
  ]
}
